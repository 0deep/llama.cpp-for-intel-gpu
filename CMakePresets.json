{
    "version": 4,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build-${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_INSTALL_RPATH": "$ORIGIN;$ORIGIN/.."
            }
        },
        {
            "name": "debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "sycl-options",
            "hidden": true,
            "cacheVariables": {
                "GGML_SYCL": "ON",
                "GGML_SYCL_TARGET": "INTEL",
                "GGML_SYCL_DNN": "ON",
                "GGML_SYCL_F16": "ON"
            }
        },
        {
            "name": "x64-linux-sycl-release",
            "inherits": [
                "base",
                "release",
                "sycl-options"
            ],
            "cacheVariables": {
                "CMAKE_C_COMPILER": "icx",
                "CMAKE_CXX_COMPILER": "icpx"
            }
        },
        {
            "name": "x64-linux-sycl-debug",
            "inherits": [
                "base",
                "debug",
                "sycl-options"
            ],
            "cacheVariables": {
                "CMAKE_C_COMPILER": "icx",
                "CMAKE_CXX_COMPILER": "icpx"
            }
        },
        {
            "name": "x64-windows-sycl-release",
            "inherits": [
                "base",
                "release",
                "sycl-options"
            ],
            "cacheVariables": {
                "CMAKE_C_COMPILER": "icx",
                "CMAKE_CXX_COMPILER": "icpx"
            }
        },
        {
            "name": "x64-windows-sycl-debug",
            "inherits": [
                "base",
                "debug",
                "sycl-options"
            ],
            "cacheVariables": {
                "CMAKE_C_COMPILER": "icx",
                "CMAKE_CXX_COMPILER": "icpx"
            }
        }
    ]
}
